package com.namelessmc.java_api.modules.suggestions;

import com.google.gson.JsonObject;
import com.namelessmc.java_api.NamelessAPI;
import com.namelessmc.java_api.NamelessUser;
import com.namelessmc.java_api.exception.NamelessException;

@org.checkerframework.framework.qual.AnnotatedFor("org.checkerframework.checker.optional.OptionalChecker")
public class SuggestionUser {

    private final @org.checkerframework.checker.optional.qual.MaybePresent NamelessAPI api;

    private final  @org.checkerframework.checker.optional.qual.MaybePresent int id;

    private final @org.checkerframework.checker.optional.qual.MaybePresent String username;

    SuggestionUser(final @org.checkerframework.checker.optional.qual.MaybePresent NamelessAPI api, final @org.checkerframework.checker.optional.qual.MaybePresent JsonObject json) {
        this.api = api;
        this.id = json.get("id").getAsInt();
        this.username = json.get("username").getAsString();
    }

    @org.checkerframework.dataflow.qual.Pure
    public  @org.checkerframework.checker.optional.qual.MaybePresent int userId() {
        return this.id;
    }

    public @org.checkerframework.checker.optional.qual.MaybePresent NamelessUser user() throws NamelessException {
        NamelessUser user = this.api.user(this.id);
        if (user == null) {
            throw new IllegalStateException("Suggestions module returned a user id that doesn't exist");
        }
        return user;
    }

    @org.checkerframework.dataflow.qual.Pure
    public @org.checkerframework.checker.optional.qual.MaybePresent String username() {
        return username;
    }
}
